    <hr>



    <!-- Sign Up FORM -->
    
<form action="/save" method="post">
    <label for="heightArea" class="form-label fs-3 mt-3">Enter Your Height</label>
    <div class="input-group mb-3" id="heightArea">
        <input type="number" class="form-control fs-3" placeholder="Feet" aria-label="Username" name="feet">
        <span class="input-group-text fs-3">feet</span>
